// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "terminal": {
    "dock": "bottom"
  },
  "git_panel": {
    "dock": "right"
  },
  "icon_theme": "Zed (Default)",
  "show_edit_predictions": true,
  "edit_predictions": {
    "mode": "subtle",
    "disabled_globs": [
      "**/.env*",
      "**/*.pem",
      "**/*.key",
      "**/*.cert",
      "**/*.crt",
      "**/secrets.yml"
    ]
  },
  "vim_mode": true,
  "relative_line_numbers": "enabled",

  "features": {
    "edit_prediction_provider": "zed"
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    }
  },
  "languages": {
    "Go": {
      "show_edit_predictions": true
    },
    "SQL": {
      "show_edit_predictions": true
    },
    "JSONC": {
      "show_edit_predictions": true
    },
    "TSX": {
      "show_edit_predictions": true
    },
    "Shell Script": {
      "show_edit_predictions": true
    },
    "Rust": {
      "show_edit_predictions": false
    },
    "C++": {
      "show_edit_predictions": false
    },
    "C": {
      "show_edit_predictions": false
    }
  },
  // "ui_font": "Source Code Pro",
  "ui_font_size": 20,
  "buffer_font_size": 21.0,
  "theme": {
    "mode": "dark",
    "light": "Harlock Ligth",
    "dark": "Warm Perf"
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "completion": {
          "snippets": {
            "custom": {
              "Arc::new": {
                "postfix": "arc",
                "body": ["Arc::new(${receiver})"],
                "requires": "std::sync::Arc",
                "scope": "expr"
              },
              "Some": {
                "postfix": "some",
                "body": ["Some(${receiver})"],
                "scope": "expr"
              },
              "Ok": {
                "postfix": "ok",
                "body": ["Ok(${receiver})"],
                "scope": "expr"
              },
              "Rc::new": {
                "postfix": "rc",
                "body": ["Rc::new(${receiver})"],
                "requires": "std::rc::Rc",
                "scope": "expr"
              },
              "Box::pin": {
                "postfix": "boxpin",
                "body": ["Box::pin(${receiver})"],
                "requires": "std::boxed::Box",
                "scope": "expr"
              },
              "vec!": {
                "postfix": "vec",
                "body": ["vec![${receiver}]"],
                "description": "vec![]",
                "scope": "expr"
              },
              "Box::new": {
                "postfix": "box",
                "body": ["Box::new(${receiver})"],
                "requires": "std::boxed::Box",
                "scope": "expr"
              },
              "HashMap::new": {
                "postfix": "hashmap",
                "body": ["HashMap::new()"],
                "requires": "std::collections::HashMap",
                "scope": "expr"
              }
            }
          }
        }
      }
    }
  }
}
